@page
@model DB.Presentation.RazorPages.Areas.Administrator.Pages.ArticleCategoryManagement.CreateModel
@{
    ViewData["Title"] = "New Article Category";
}

<!-- Page Header-->
<header class="bg-white shadow-sm px-4 py-3 z-index-20">
    <div class="container-fluid px-0">
        <h2 class="mb-0 p-1">Categories</h2>
    </div>
</header>
<!-- Breadcrumb-->
<div class="bg-white">
    <div class="container-fluid">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 py-3">
                <li class="breadcrumb-item"><a class="fw-light" asp-area="Administrator" asp-page="/Index">Home</a></li>
                <li class="breadcrumb-item"><a class="fw-light" asp-area="Administrator" asp-page="/ArticleCategoryManagement/Index">Categories</a></li>
                <li class="breadcrumb-item active fw-light" aria-current="page">New Category</li>
            </ol>
        </nav>
    </div>
</div>
<!-- Basic Form-->

        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="h4 mb-0">New Category</h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3 col-lg-6 col-md-12 col-sm-12">
                            <label class="form-label" asp-for="ArticleCategory.Name"></label>
                            <input class="form-control" asp-for="ArticleCategory.Name" aria-describedby="titleHelp">
                            <div class="form-text" id="titleHelp">Enter the category title.</div>
                            <span class="text-danger" asp-validation-for="ArticleCategory.Name"></span>
                        </div>
                        <a asp-page="./Index" class="btn btn-secondary">Back</a>
                        <button class="btn btn-primary" type="submit">Create</button>
                    </form>
                </div>
            </div>
        </div>
